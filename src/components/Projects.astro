---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import React from "./icons/React.astro";

import Angular from "./icons/Angular.astro";
import MySQL from "./icons/Mysql.astro";

import Express from "./icons/Expressjs.astro";

import CSharp from "./icons/Csharp.astro";
import Electron from "./icons/Electron.astro";
import Mongo from "./icons/Mongodb.astro";
import Nest from "./icons/Nestjs.astro";
import Nodejs from "./icons/Nodejs.astro";
import Prisma from "./icons/Prisma.astro";

import Link from "./icons/Link.astro";
import Tailwind from "./icons/Tailwind.astro";
import LinkButton from "./LinkButton.astro";
import { changeLanguage, t } from "i18next";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-[#003159] text-white",
    icon: React,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-[#003159] text-white",
    icon: Angular,
  },
  NODEJS: {
    name: "NodeJs",
    class: "bg-[#003159] text-white",
    icon: Nodejs,
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-[#003159] text-white",
    icon: MySQL,
  },
  EXPRESS: {
    name: "ExpressJS",
    class: "bg-[#003159] text-white",
    icon: Express,
  },
  MONGO: {
    name: "MongoDB",
    class: "bg-[#003159] text-white",
    icon: Mongo,
  },
  NEST: {
    name: "NestJs",
    class: "bg-[#003159] text-white",
    icon: Nest,
  },
  CSharp: {
    name: "CSharp",
    class: "bg-[#003159] text-white",
    icon: CSharp,
  },
  ELECTRON: {
    name: "Electrni",
    class: "bg-[#003159] text-white",
    icon: Electron,
  },
  PRISMA: {
    name: "Prisma",
    class: "bg-[#003159] text-white",
    icon: Prisma,
  },
};
const PROJECTS = [
  {
    title: "NivelUp",
    description: t("projects.nivelup.description"),
    link: "https://nivelup.netlify.app/",
    github: "https://github.com/Noeury",
    image: "/projects/nivelup.jpeg",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.NODEJS, TAGS.EXPRESS, TAGS.MYSQL],
  },
  {
    title: "JEN",
    description: t("projects.jen.description"),
    link: "https://github.com/Noeury",
    image: "/projects/jen.png",
    tags: [
      TAGS.ANGULAR,
      TAGS.NEST,
      TAGS.MONGO,
      TAGS.CSharp,
      TAGS.PRISMA,
      TAGS.NODEJS,
      TAGS.TAILWIND,
    ],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-wrap mb-2 gap-x-2 sm:flex-row">
              {tags.map((tag) => (
                <li class="mb-2">
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
